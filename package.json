{
  "name": "base-project",
  "version": "1.0.0",
  "description": "a basic project to start studying any topics",
  "main": "index.js",
  "scripts": {
    "test": "npm start",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "serve": "browser-sync start --server --files 'dist/css/*.css, **/*.html'",
    "watch:css": "onchange 'src/scss' -- npm run scss",
    "start": "run-p serve watch:css"
  },
  "author": "Evgeny-Karas",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0"
  },
  "dependencies": {}
}
